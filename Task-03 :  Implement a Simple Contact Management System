class Contact:
    def _init_(self, name, phone_number, email):
        self.name = name
        self.phone_number = phone_number
        self.email = email

    def _str_(self):
        return f"Name: {self.name}\nPhone Number: {self.phone_number}\nEmail: {self.email}"

class ContactManager:
    def _init_(self):
        self.contacts = []

    def add_contact(self, contact):
        self.contacts.append(contact)
        print("Contact added successfully.")

    def display_contacts(self):
        if self.contacts:
            for index, contact in enumerate(self.contacts, start=1):
                print(f"Contact {index}:\n{contact}\n")
        else:
            print("No contacts found.")

    def search_contact(self, name):
        found_contacts = [contact for contact in self.contacts if contact.name.lower() == name.lower()]
        if found_contacts:
            for contact in found_contacts:
                print(contact)
        else:
            print("Contact not found.")

def main():
    contact_manager = ContactManager()

    while True:
        print("\nContact Management System")
        print("1. Add Contact")
        print("2. Display Contacts")
        print("3. Search Contact")
        print("4. Exit")

        choice = input("Enter your choice: ")

        if choice == '1':
            name = input("Enter name: ")
            phone_number = input("Enter phone number: ")
            email = input("Enter email: ")
            contact = Contact(name, phone_number, email)
            contact_manager.add_contact(contact)
        elif choice == '2':
            contact_manager.display_contacts()
        elif choice == '3':
            name = input("Enter name to search: ")
            contact_manager.search_contact(name)
        elif choice == '4':
            print("Exiting...")
            break
        else:
            print("Invalid choice. Please enter a number between 1 and 4.")

if _name_ == "_main_":
    main()
